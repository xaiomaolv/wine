.weui-half-screen-dialog {
  position: fixed;
  left: 0;
  right: 0;
  bottom: 0;
  min-height: 510rpx;
  max-height: 75%;
  z-index: 5000;
  line-height: 1.4;
  background-color: #fff;
  color: rgba(0, 0, 0, 0.9);
  border-top-left-radius: 24rpx;
  border-top-right-radius: 24rpx;
  overflow: hidden;
  padding: 0 48rpx;
  padding: 0 calc(48rpx + constant(safe-area-inset-right)) constant(safe-area-inset-bottom) calc(48rpx + constant(safe-area-inset-left));
  padding: 0 calc(48rpx + env(safe-area-inset-right)) env(safe-area-inset-bottom) calc(48rpx + env(safe-area-inset-left));
  box-sizing: border-box;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-orient: vertical;
  -webkit-box-direction: normal;
  -webkit-flex-direction: column;
  flex-direction: column;
  outline: 0;
}

.weui-half-screen-dialog__hd {
  min-height: 128rpx;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-align: center;
  -webkit-align-items: center;
  align-items: center;
  -webkit-flex-shrink: 0;
  flex-shrink: 0;
}

.weui-half-screen-dialog__title {
  display: block;
  color: rgba(0, 0, 0, 0.9);
  font-weight: 500;
  font-size: 30rpx;
}

.weui-half-screen-dialog__subtitle {
  display: block;
  color: rgba(0, 0, 0, 0.5);
  font-size: 20rpx;
}

.weui-half-screen-dialog__bd {
  -webkit-box-flex: 1;
  -webkit-flex: 1;
  flex: 1;
  min-height: 0;
  overflow-y: auto;
  word-wrap: break-word;
  -webkit-hyphens: auto;
  hyphens: auto;
  padding-bottom: 112rpx;
  font-size: 28rpx;
  color: rgba(0, 0, 0, 0.9);
}

.weui-half-screen-dialog__tip {
  padding-top: 32rpx;
  font-size: 32rpx;
  font-weight: 400;
  line-height: 1.4;
  color: rgba(0, 0, 0, 0.8);
}

.weui-half-screen-dialog__tips {
  padding-top: 40rpx;
  font-size: 28rpx;
  font-weight: 400;
  line-height: 1.5;
  color: rgba(0, 0, 0, 0.8);
}

.weui-half-screen-dialog__agree {
  display: flex;
  padding-top: 40rpx;
  font-size: 28rpx;
}

.weui-half-screen-dialog__look {
  color: rgba(0, 0, 0, 0.3);
  line-height: 1.4;
}

.btns {
  margin-bottom: 48rpx;
  display: flex;
}

.btns .item {
  justify-content: space-between;
  width: 100%;
  height: 80rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 64rpx;
  box-sizing: border-box;
  border: none;
}

.btns .item::after {
  border: none;
}

.btns .reject {
  background: #F2F2F2;
  color: #07C160;
  margin-right: 24rpx;
}

.btns .agree {
  background: #07c160;
  color: #fff;
  margin-left: 24rpx;
}